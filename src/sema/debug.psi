import PSC::Reflection::*;

/// Utility functions for dumping Reflection objects.
/// Used for debugging.
interface SailGate::Sema::Debug<> is
    /// Dumps Decl
    func Dump(D : Decl);

    /// Dumps type descriptor
    func Dump(T : Type_Descriptor);

    /// Dumps tree
    func Dump(T : Tree; Lvl : Univ_Integer := 0);
end interface SailGate::Sema::Debug
